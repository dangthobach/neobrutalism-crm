# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# App Configuration
NEXT_PUBLIC_APP_NAME=Neobrutalism CRM
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=true

# ====================================
# Backend - Database Configuration
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neobrutalism_crm
DB_USERNAME=crm_user
DB_PASSWORD=CHANGE_ME_DB_PASSWORD

# ====================================
# Backend - Redis Configuration
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ====================================
# Backend - JWT Security
# ====================================
JWT_SECRET=CHANGE_ME_JWT_SECRET_MIN_256_BITS_RANDOM_STRING
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# ====================================
# Backend - Email Configuration (Development - MailHog)
# ====================================
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@crm.local
MAIL_FROM_NAME=Neobrutalism CRM

