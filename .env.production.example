# ====================================
# PRODUCTION ENVIRONMENT VARIABLES
# ====================================
# IMPORTANT: Never commit this file with real values!
# Copy to .env.production and fill in real values

# ====================================
# Server Configuration
# ====================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# ====================================
# Database Configuration (PostgreSQL)
# ====================================
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=neobrutalism_crm_prod
DB_USERNAME=crm_prod_user
DB_PASSWORD=<CHANGE_ME_STRONG_DB_PASSWORD_MIN_32_CHARS>

# ====================================
# Redis Configuration
# ====================================
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=<CHANGE_ME_STRONG_REDIS_PASSWORD_MIN_32_CHARS>

# ====================================
# JWT Security Configuration
# ====================================
# CRITICAL: Generate a strong random secret (minimum 256 bits / 32 bytes)
# Use: openssl rand -base64 32
JWT_SECRET=<CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32>
JWT_ACCESS_TOKEN_VALIDITY=3600000
JWT_REFRESH_TOKEN_VALIDITY=604800000

# ====================================
# MinIO Object Storage Configuration
# ====================================
MINIO_ENDPOINT=https://your-minio-host.com
MINIO_ACCESS_KEY=<CHANGE_ME_MINIO_ACCESS_KEY_MIN_20_CHARS>
MINIO_SECRET_KEY=<CHANGE_ME_MINIO_SECRET_KEY_MIN_40_CHARS>
MINIO_DEFAULT_BUCKET=crm-files-prod

# ====================================
# Email Configuration (Production SMTP)
# ====================================
# Option 1: AWS SES (Recommended for production)
MAIL_HOST=email-smtp.us-east-1.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=<YOUR_AWS_SES_SMTP_USERNAME>
MAIL_PASSWORD=<YOUR_AWS_SES_SMTP_PASSWORD>
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=Neobrutalism CRM
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true
MAIL_SMTP_STARTTLS_REQUIRED=true

# Option 2: SendGrid (Alternative)
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=<YOUR_SENDGRID_API_KEY>

# Option 3: Gmail (Not recommended for production)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=<YOUR_APP_PASSWORD>

# ====================================
# Notification Configuration
# ====================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_QUIET_HOURS_ENABLED=true
NOTIFICATION_QUIET_HOURS_START=22
NOTIFICATION_QUIET_HOURS_END=7
NOTIFICATION_TIMEZONE=Asia/Ho_Chi_Minh
NOTIFICATION_DIGEST_ENABLED=true

# ====================================
# Rate Limiting Configuration
# ====================================
RATE_LIMIT_ENABLED=true

# ====================================
# CORS Configuration
# ====================================
# Add your production frontend URLs
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====================================
# Monitoring & Observability
# ====================================
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-collector:4318

# ====================================
# Security Configuration
# ====================================
# Enable HSTS in production
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true

# CSP Configuration (adjust based on your needs)
SECURITY_CSP_ENABLED=true

# ====================================
# Feature Flags
# ====================================
CASBIN_ENABLED=true
AUDIT_SCHEDULED_ENABLED=true

# ====================================
# Logging Configuration
# ====================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=INFO

# ====================================
# Multi-tenancy Configuration
# ====================================
APP_TENANT_STRICT_MODE=true
APP_TENANT_DEFAULT_ID=default
